+                LOG.warn("Missing counter for label %(label_id)s, "
+                         "router %(router_id)s.",
+                         {'label_id': label_id, 'router_id': router_id})
 
         for router_id in routers_to_reconfigure:
             self.routers.pop(router_id, None)
